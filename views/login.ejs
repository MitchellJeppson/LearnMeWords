<!DOCTYPE html>

<html lang="en">
<head>
    <title>Learn Me Words - Sign In</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:700,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="./css/login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <form id="loginForm">
        <div class="box">
            <h1>Sign In</h1>

            <div id="invalidMessage"></div>

            <input id="username" type="text" name="email" placeholder="Username" class="email" />

            <input id="password" type="password" name="password" placeholder="Password" class="email" />

            <a href="/signIn" onclick="signInClick()"><div class="btn">Sign In</div></a>

            <a href="/signUp" onclick="signUpClick()"><div id="btn2">Sign Up</div></a>

        </div>

    </form>

    <p>Forgot your password? <u style="color:#f1c40f;">Click Here!</u></p>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript"></script>
    <script src="./js/login.js" type="text/javascript"></script>
    <script src="./js/utilities.js" type="text/javascript"></script>
    <script>
    const name = "<%= message %>";
    console.log(name);
    if(name === "Incorrect username or password")
    $('#invalidMessage')[0].innerHTML = name;

    const username = "<%= username %>";
    console.log(username);
    if(username)
    $('#username')[0].value = username;
    </script>
</body>
</html>
